#!/usr/bin/env bash

if [ "$SUPERVISOR_PHP_USER" != "root" ] && [ "$SUPERVISOR_PHP_USER" != "sail" ]; then
    echo "You should set SUPERVISOR_PHP_USER to either 'sail' or 'root'."
    exit 1
fi

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

# === Frontend Build on Container Start ===
if [ -f /var/www/html/package.json ]; then
    echo "=== Frontend Build ==="
    cd /var/www/html

    # Install dependencies if node_modules missing or package.json newer
    if [ ! -d "node_modules" ] || [ "package.json" -nt "node_modules" ]; then
        echo "Installing npm dependencies..."
        npm install
    fi

    # Build for production (skip if VITE_DEV_MODE is set)
    if [ -z "$VITE_DEV_MODE" ]; then
        echo "Building frontend assets..."
        npm run build
        echo "=== Frontend Build Complete ==="
    else
        echo "VITE_DEV_MODE enabled - skipping build"
        echo "Run 'npm run dev' manually for HMR"
    fi
fi
# === End Frontend Build ===

if [ $# -gt 0 ]; then
    if [ "$SUPERVISOR_PHP_USER" = "root" ]; then
        exec "$@"
    else
        exec gosu $WWWUSER "$@"
    fi
elif [ "$CONTAINER_ROLE" = "queue" ]; then
    exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord-queue.conf
elif [ "$CONTAINER_ROLE" = "scheduler" ]; then
    exec gosu $WWWUSER php /var/www/html/artisan schedule:work
else
    exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
